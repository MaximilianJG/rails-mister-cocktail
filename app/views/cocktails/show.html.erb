<div class="container pt-3">

  <div class="d-flex justify-content-between">
    <div><h1 class="pt-2"><%= @cocktail.name %></h1></div>
    <div><%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-primary mt-3" %></div>
  </div>

  <%= link_to "Edit Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary mt-3" %>

  <ul class="mt-4">
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name.capitalize %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fas fa-trash-alt ml-2"></i>
    <% end %> </li>
    <% end %>
  </ul>

</div>
