<div class="container p-5 card mt-5 form-card">

<div class="d-flex justify-content-between">
  <div><h1 class="pt-2">Create a new Cocktail</h1></div>
  <div><%= link_to "Back to all cocktails", root_path, class: "btn btn-primary mt-3" %></div>
</div>

<div>
  <%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Create Cocktail", class: "btn btn-dark"%>
  <% end %>
</div>

</div>
