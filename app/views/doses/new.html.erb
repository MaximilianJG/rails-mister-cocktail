<div class="container p-5 card mt-5 form-card">

  <div class="d-flex justify-content-between">
    <div><h1 class="pt-2">Add a dose to <%= @cocktail.name %></h1></div>

    <div><%= link_to "Back to all cocktails", root_path, class: "btn btn-primary mt-3" %></div>
  </div>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.submit "Add Dose", class: 'btn btn-dark' %>
  <% end %>
</div>

